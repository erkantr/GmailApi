<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" android:padding="@dimen/base_dimen" style="@style/Theme.MatchWidth">
    <LinearLayout android:padding="@dimen/base_dimen" style="@style/Theme.MatchParent.Vertical.Main">
        <TextView android:textAppearance="@style/TextAppearance.Medium" android:textColor="@color/orange" android:gravity="center_horizontal" android:id="@+id/txt_title" style="@style/Theme.MatchWidth"/>
        <TextView android:textAppearance="@style/TextAppearance.Small" android:textColor="@color/black" android:gravity="center_horizontal" android:id="@+id/txt_message" android:layout_marginTop="@dimen/base_dimen" style="@style/Theme.MatchWidth"/>
        <LinearLayout android:layout_marginTop="@dimen/base_dimen" style="@style/Theme.MatchWidth">
            <Button android:id="@+id/btn_negative" android:layout_marginRight="4dp" android:layout_weight="0.5" style="@style/Theme.Button.White"/>
            <Button android:id="@+id/btn_positive" android:layout_marginLeft="4dp" android:layout_weight="0.5" style="@style/Theme.Button.Orange"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
